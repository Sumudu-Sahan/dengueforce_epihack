<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="@dimen/widthPara"
            android:layout_centerInParent="true"
            android:src="@drawable/final_logo"
            android:layout_height="@dimen/widthPara" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/userNameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/paddingSize2"
            android:textColor="#ff8000"
            android:textColorHint="#ffffaa"
            android:background="@drawable/border_row_black"
            android:hint="Username"
            android:inputType="textEmailAddress"
            android:padding="@dimen/paddingSize2" />

        <EditText
            android:id="@+id/passwordField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/paddingSize2"
            android:background="@drawable/border_row_black"
            android:hint="Password"
            android:textColorHint="#ffffaa"
            android:textColor="#ff8000"
            android:inputType="textPassword"
            android:padding="@dimen/paddingSize2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/loginButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/border_size2"
                        android:background="@drawable/border_row_for_buttons"
                        android:text="Login"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/text_size_2" />

                    <Button
                        android:id="@+id/registerButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/border_size2"
                        android:background="@drawable/border_row_for_buttons"
                        android:text="Register"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/text_size_2" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:text="Powered By Epihack 2017"
            android:textColor="#FF8000" />
    </RelativeLayout>

</LinearLayout>