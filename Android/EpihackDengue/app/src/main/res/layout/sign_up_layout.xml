<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/text_size_7">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textColor="#ff8000"
                    android:textSize="@dimen/text_size_1" />

                <EditText
                    android:id="@+id/firstNameField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:padding="@dimen/paddingSize2"
                    android:background="@drawable/border_row_black"
                    android:hint="Enter your first name here"
                    android:textColorHint="#aaaaaa"
                    android:textSize="@dimen/text_size_1" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/text_size_7">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:textColor="#ff8000"
                    android:textSize="@dimen/text_size_1" />

                <EditText
                    android:id="@+id/lastNameField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your last name here"
                    android:textColor="#ffffff"
                    android:padding="@dimen/paddingSize2"
                    android:textColorHint="#aaaaaa"
                    android:background="@drawable/border_row_black"
                    android:textSize="@dimen/text_size_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/text_size_7">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textColor="#ff8000"
                    android:textSize="@dimen/text_size_1" />

                <EditText
                    android:id="@+id/userNameField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your user name here"
                    android:textColor="#ffffff"
                    android:padding="@dimen/paddingSize2"
                    android:textColorHint="#aaaaaa"
                    android:background="@drawable/border_row_black"
                    android:textSize="@dimen/text_size_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/text_size_7">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="#ff8000"
                    android:textSize="@dimen/text_size_1" />

                <EditText
                    android:id="@+id/passwordField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your password here"
                    android:inputType="textPassword"
                    android:textColor="#ffffff"
                    android:padding="@dimen/paddingSize2"
                    android:textColorHint="#aaaaaa"
                    android:background="@drawable/border_row_black"
                    android:textSize="@dimen/text_size_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/text_size_7">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:textColor="#ff8000"
                    android:textSize="@dimen/text_size_1" />

                <EditText
                    android:id="@+id/emailAddressField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your email address here"
                    android:inputType="textEmailAddress"
                    android:textColor="#ffffff"
                    android:padding="@dimen/paddingSize2"
                    android:textColorHint="#aaaaaa"
                    android:background="@drawable/border_row_black"
                    android:textSize="@dimen/text_size_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/text_size_7">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="#ff8000"
                    android:textSize="@dimen/text_size_1" />

                <EditText
                    android:id="@+id/addressField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your address here"
                    android:textColor="#ffffff"
                    android:padding="@dimen/paddingSize2"
                    android:textColorHint="#aaaaaa"
                    android:background="@drawable/border_row_black"
                    android:inputType="textPostalAddress"
                    android:textSize="@dimen/text_size_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/text_size_7">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textColor="#ff8000"
                    android:textSize="@dimen/text_size_1" />

                <EditText
                    android:id="@+id/cityField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your city here"
                    android:textColor="#ffffff"
                    android:padding="@dimen/paddingSize2"
                    android:textColorHint="#aaaaaa"
                    android:background="@drawable/border_row_black"
                    android:textSize="@dimen/text_size_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/text_size_7">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:textColor="#ff8000"
                    android:textSize="@dimen/text_size_1" />

                <EditText
                    android:id="@+id/stateField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter the state here"
                    android:textColor="#ffffff"
                    android:padding="@dimen/paddingSize2"
                    android:textColorHint="#aaaaaa"
                    android:background="@drawable/border_row_black"
                    android:textSize="@dimen/text_size_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/text_size_7">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Number"
                    android:textColor="#ff8000"
                    android:textSize="@dimen/text_size_1" />

                <EditText
                    android:id="@+id/contactNumberField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:padding="@dimen/paddingSize2"
                    android:textColorHint="#aaaaaa"
                    android:background="@drawable/border_row_black"
                    android:hint="Enter your contact number here"
                    android:textSize="@dimen/text_size_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/text_size_7">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number"
                    android:textColor="#ff8000"
                    android:textSize="@dimen/text_size_1" />

                <EditText
                    android:id="@+id/mobileNumberField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:padding="@dimen/paddingSize2"
                    android:textColorHint="#aaaaaa"
                    android:background="@drawable/border_row_black"
                    android:hint="Enter your mobile here"
                    android:textSize="@dimen/text_size_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/paddingSize2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/submitButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_row_for_buttons"
                        android:gravity="center"
                        android:text="SUBMIT"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/text_size_2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>